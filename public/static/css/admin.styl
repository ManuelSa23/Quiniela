body 
  background-color: #f5f6fa
  font-size: 14px;
  font-family: 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html 
   padding: 0px
   margin: 0px

.mtop16
    margin-top: 16px

.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 20%
    .col2
        float left
        width 80%

.sidebar
    background-color: #fff
    min-height: 100vh
    .section-top
        background-color: #fff
        box-shadow: 0 0.5rem 1rem rgba(0,0,0, 0.15)
    .logo
        display block
        margin: 0px auto
        padding-top: 24px
        width: 50%
    .user
        color rgb(12, 61, 238) !important
        padding: 16px
        a 
             color: black
             font-size 1.0em
    .main
        display: block
        margin-top: 8px
        ul
              li  
                  margin-bottom: 4px
                  a 
                      color: black
                      display block
                      font-size 1.1em
                      padding 12px 12px
                      i
                         margin-right 10px
                      &:hover
                        background-color: rgb(12, 61, 238)
                        box-shadow: 0 0.5rem 1rem rgba(0,0,0, 0.15)
                        text-decoration: none

.navbar
    background-color: rgb(12, 61, 238)
    a 
          color: #fff !important
.page 
    padding-top: 16px
    padding-bottom: 16px
    .breadcrumb
        background-color: #fff
        box-shadow: 0 0.5rem 1rem rgba(0,0,0, 0.15)
        .breadcrumb-item
         a 
                 &:hover
                     text-decoration: none !important
    .panel
        background-color: #fff
        border-radius: 6px
        border-bottom: 2px solid rgb(12, 61, 238)
        width: 100%
        .header
            border-bottom: 2px solid rgb(12, 61, 238)
            h2.title 
                 display: inline-block                
                 color: rgb(12, 61, 238)
                 font-size: 1.1em
                 padding: 12px 16px
        .inside 
             padding: 16px
             .nav
                .nav-link
                    border: 1px solid rgb(12, 61, 238)
                    margin-right: 8px 
                    &:hover
                        background-color: rgb(12, 61, 238)
                        color: #fff

.opts
    a 
        border-radius: 4px
        border: 1px solid #dedede
        display: inline-block
        padding: 8px 12px

.product_gallery
    overflow: hidden
    .tumb
        float: left
        display: block
        margin-right: 1%
        width: 39%
        a 
           border 1px dashed rgb(12, 61, 238)
           border-radius: 4px
           color: #333
           display: block
           font-size: 2em
           text-align: center
           padding: 40px 0px
           width: 100%
           &:hover
            background-color: rgb(12, 61, 238)
            color: #fff


    


