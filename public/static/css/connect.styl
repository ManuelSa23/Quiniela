 body
    background-color: #f6f6f6
    font-size: 14px
    margin 0px

 .mtop16 
    margin-top: 16px    

 .box
    background-color: #fff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position absolute
    padding: 16px
    width 500px   
 
 .btn-success
   background-color: rgb(12, 61, 238)
   border: 0px
   width: 100%
 
 .form-control
   &:focus
   &:active
      outline: none
      box-shadow none

  .inside
    padding: 16px
  .header
    background-color: #fff
    border-radius: 8px 8px 0px 0px
    padding: 16px
    a 
        img 
            display block
            margin 0px auto
            width: 60%
  .footer
    text-align center
    a
        display inline-block 
        font-size: 14px
        &:last-child
          margin-left: 200px
  .footer_registra
    text-align center
    a
        display inline-block 
        font-size: 14px
        &:last-child
          margin-left: 10px


 .box_login
   left calc(50% - 270px)
   top calc(25% - 30px)

.box_registrar
   left calc(50% - 270px)
   top calc(25% - 170px)







